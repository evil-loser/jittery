extends ./layouts/default.jade

block content
	.row
		.col-md-12
			h1 Design View

	if auth
		.row
			.col-md-12
				h3 #{design.name} by
					a(href="/profile/" + design.designerUserName) #{design.designerUserName}
		.row
			.col-md-12
				img(src=design.mainImage.medium.url)
		.row
			.col-md-12
				if design.additionalImages
					each val in design.additionalImages
						img(src=design.additionalImages[val].small.url)

	else
