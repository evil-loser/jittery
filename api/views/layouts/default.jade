doctype html
html
	block head
		head
			meta(charset='utf-8')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			meta(http-equiv='X-UA-Compatible' content='IE=edge')
			link(href='/css/bootstrap.min.css', rel='stylesheet')
			link(href='/css/main.css', rel='stylesheet')
			link(rel="stylesheet", href="//cdn.jsdelivr.net/evil-icons/1.7.2/evil-icons.min.css")
			script(src='/lib/jquery-2.1.3.min.js')
		//- NB use 'append head' in view to e.g. add a page specific script/css link to the page. !!! Do not use 'block head', you'll overwrite it

		block title
				title Fikay

		body
			.container-fluid
				nav.navbar.navbar-default
					.navbar-header
						button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="collapselist")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/')
							img(alt='Fikay Fresh', height="20px", width="20px", src="/img/fikay.png")
					#collapselist.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(href="/profile") Profile
							li.dropdown
								a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false") Designs
									span.caret
								ul.dropdown-menu(role="menu")
									li
										a(href="/mydesigns") My Designs
									li
										a(href="/categories") Categories
							li.dropdown
								a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false") Designers
									span.caret
								ul.dropdown-menu(role="menu")
									li
										a(href="/designers") Designers' Profiles
							ul.nav.navbar-nav.navbar-right
								li
									a(href="/logout") Log Out
							ul.nav.navbar-nav.navbar-right
								li
									a(href="/login") Log In
						//-TODO make login/logout context sensitive

			.container
				block content

				block footer
					script(src='/lib/bootstrap.min.js')
					script(src='/scripts/main.js')
					//- p Fikay 2015
					//- NB -as above, use 'append footer' to add anything page specific
