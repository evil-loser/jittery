extends ./layouts/default.jade

block content
	div
		.row.box
			.col-md-12

				if user
					//- p #{user}
					if user.profileImage
						img.profilePic(src=user.profileImage.small.url)
						h3.profileInfo #{user.firstName} #{user.lastName}
						//- p Username: #{user.username}
						p.profileInfo Email: #{user.email}
						p.profileInfo Memeber since: #{user.dateJoined}

					.row
						.col-md-12
							legend
							h4 About Me
							//- for bio, do we want to give them an option to edit their bio, or not enough time at this stage?
							//- Yes, but maybe not enough time. I suggest an edit link that reuses the sign up view and populates the fields with user data to edit
							//- p #{user.bio}
							input.form-control.editField(type='text', value=user.bio, readonly)
								//- .input-group-addon
      							//-span.glyphicon.glyphicon-pencil.editMode
				else
					h3 Error - user not found

	//- No designs currently being passed to profile, will require an addiotnal db query
	//- .row
		.col-md-12
			h4 My Designs
			img.designs(src=, href=)

append footer
	script(src="/scripts/profile.js")
